<h3 class="text-center">Please Login Below</h3>

<div class="col-sm-6 col-sm-offset-3">

  <%= form_tag user_sessions_path, method: :post, class: 'form-horizontal', role: 'form' do %>

    <div class="form-group">
      <%= label_tag :email, nil, class: "col-sm-2 control-label" %>
      <div class="col-sm-10">
        <%= email_field_tag :email, nil, class: "col-sm-2 form-control" %>
      </div>
    </div>

    <div class="form-group">
      <%= label_tag :password, nil, class: "col-sm-2 control-label" %>
      <div class="col-sm-10">
        <%= password_field_tag :password, nil, class: "col-sm-2 form-control" %>
      </div>
    </div>

    <div class="form-group">
      <div class="col-sm-offset-2 col-sm-10">
        <%= submit_tag "Login", name: nil, class: "btn btn-default" %>
      </div>
    </div>

  <% end %>

</div>


